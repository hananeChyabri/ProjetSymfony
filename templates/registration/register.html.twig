{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<!-- Section: Design Block -->
	<section
		class="text-center">
		<!-- Background image -->
		<div class="p-5 bg-image" style="background-color: #5cb874;
									        height: 300px;
									        "></div>
		<!-- Background image -->

		<div class="card mx-4 mx-md-5 shadow-5-strong" style="
												        margin-top: -100px;
												        background: hsla(0, 0%, 100%, 0.8);
												        backdrop-filter: blur(30px);
												        ">
			<div class="card-body py-5 px-md-5">

				<div class="row d-flex justify-content-center">
					<div class="col-lg-8">
						<h2 class="fw-bold mb-5">Cr√©er un compte </h2>
						{{ form_errors(registrationForm) }}

						{{ form_start(registrationForm) }}
						<!-- 2 column grid layout with text inputs for the first and last names -->


						<!-- Email input -->
							<div class="form-outline mb-4"> {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control'} }) }}
						</div>

						<!-- Password input -->
						<div class="form-outline mb-4">

							{{ form_row(registrationForm.plainPassword, {
                    'attr': {'class': 'form-control'},
            label: 'mot de passe'
        }) }}
						</div>
						<div class="form-outline mb-4">{{ form_row(registrationForm.agreeTerms) }}
						</div>


						<!-- Submit button -->
						<button type="submit" class="btn btn-primary btn-block mb-4">
							Continuer
						</button>

						<!-- Register buttons -->

						{{ form_end(registrationForm) }}
					</div>
				</div>
			</div>
		</div>
	</section>
	<!-- Section: Design Block -->
{% endblock %}
